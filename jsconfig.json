{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/layouts/*": ["layouts/*"],
      "@/css/*": ["css/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "exclude": [
    "node_modules",
    ".git",
    ".contentlayer",
    ".github",
    ".yarn",
    ".vscode",
    ".husky",
    "dist",
    "dist*",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
